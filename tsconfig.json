{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "Node16",                                
    "moduleResolution": "Node16",                     
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "build",
    "strictNullChecks": true   
  },
  "exclude": ["node_modules/"],
  "include": ["src/**/*.ts"]
}
